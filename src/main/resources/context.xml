<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <import resource="sony.xml"/>
    <import resource="toshiba.xml"/>

    <bean id="t1000" class="impls.robot.ModelT1000" init-method="init" destroy-method="destroy" scope="prototype">
        <constructor-arg index="0" ref="sonyHead" type="interfaces.Head"/>
        <constructor-arg index="1" ref="toshibaHand"/>

        <property name="leg" ref="sonyLeg"/>

        <property name="color" value="red"/>
        <property name="year" value="2000"/>
        <property name="soundEnabled" value="false"/>
    </bean>

</beans>